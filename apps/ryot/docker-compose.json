{
  "services": [
    {
      "name": "ryot",
      "image": "ghcr.io/ignisda/ryot:v2.24.2",
      "isMain": true,
      "internalPort": 8000,
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "postgres://tipi:${RYOT_DB_PASSWORD}@ryot-db:5432/ryot"
        },
        {
          "key": "SERVER_INSECURE_COOKIE",
          "value": "true"
        },
        {
          "key": "USERS_ALLOW_REGISTRATION",
          "value": "${RYOT_ALLOW_REGISTRATION}"
        },
        {
          "key": "VIDEO_GAMES_TWITCH_CLIENT_ID",
          "value": "${RYOT_VIDEO_GAMES_TWITCH_CLIENT_ID}"
        },
        {
          "key": "VIDEO_GAMES_TWITCH_CLIENT_SECRET",
          "value": " ${RYOT_VIDEO_GAMES_TWITCH_CLIENT_SECRET}"
        }
      ],
      "dependsOn": ["ryot-db"]
    },
    {
      "name": "ryot-db",
      "image": "postgres:15-alpine",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${RYOT_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "ryot"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
