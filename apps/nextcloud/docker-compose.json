{
  "services": [
    {
      "name": "nextcloud",
      "image": "nextcloud:26.0.13-apache",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "POSTGRES_HOST",
          "value": "db-nextcloud"
        },
        {
          "key": "REDIS_HOST",
          "value": "redis-nextcloud"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_DB",
          "value": "nextcloud"
        },
        {
          "key": "NEXTCLOUD_ADMIN_USER",
          "value": "${NEXTCLOUD_ADMIN_USER}"
        },
        {
          "key": "NEXTCLOUD_ADMIN_PASSWORD",
          "value": "${NEXTCLOUD_ADMIN_PASSWORD}"
        },
        {
          "key": "NEXTCLOUD_TRUSTED_DOMAINS",
          "value": "${APP_DOMAIN}"
        },
        {
          "key": "TRUSTED_PROXIES",
          "value": "172.16.0.0/12"
        },
        {
          "key": "OVERWRITEPROTOCOL",
          "value": "${APP_PROTOCOL:-http}"
        }
      ],
      "dependsOn": ["db-nextcloud", "redis-nextcloud"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud",
          "containerPath": "/var/www/html"
        }
      ]
    },
    {
      "name": "db-nextcloud",
      "image": "postgres:14.2",
      "environment": [
        {
          "key": "POSTGRES_PASSWORD",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_DB",
          "value": "nextcloud"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    },
    {
      "name": "redis-nextcloud",
      "image": "redis:6.2.6",
      "user": "1000:1000",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ]
    },
    {
      "name": "cron",
      "image": "nextcloud:25.0.13-apache",
      "dependsOn": ["db-nextcloud", "redis-nextcloud"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud",
          "containerPath": "/var/www/html"
        }
      ],
      "entrypoint": "/cron.sh"
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
