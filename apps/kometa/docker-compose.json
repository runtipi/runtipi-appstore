{
  "services": [
    {
      "name": "kometa",
      "image": "ghcr.io/linuxserver/kometa:2.2.2",
      "isMain": true,
      "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "KOMETA_CONFIG",
          "value": "/config/config.yml"
        },
        {
          "key": "KOMETA_TIME",
          "value": "${CONF_KOMETA_TIME-02:00}"
        },
        {
          "key": "KOMETA_RUN",
          "value": "${CONF_KOMETA_RUN-false}"
        },
        {
          "key": "KOMETA_TEST",
          "value": "${CONF_KOMETA_TEST-false}"
        },
        {
          "key": "KOMETA_NO_MISSING",
          "value": "false"
        },
        {
          "key": "KOMETA_DEBUG",
          "value": "${CONF_KOMETA_DEBUG-false}"
        },
        {
          "key": "KOMETA_TRACE",
          "value": "${CONF_KOMETA_TRACE-false}"
        },
        {
          "key": "KOMETA_LOG_REQUESTS",
          "value": "${CONF_KOMETA_LOG_REQUESTS-false}"
        },
        {
          "key": "KOMETA_TIMEOUT",
          "value": "${CONF_KOMETA_TIMEOUT-180}"
        },
        {
          "key": "KOMETA_NO_VERIFY_SSL",
          "value": "${CONF_KOMETA_NO_VERIFY_SSL-false}"
        },
        {
          "key": "KOMETA_COLLECTIONS_ONLY",
          "value": "false"
        },
        {
          "key": "KOMETA_METADATA_ONLY",
          "value": "false"
        },
        {
          "key": "KOMETA_PLAYLISTS_ONLY",
          "value": "false"
        },
        {
          "key": "KOMETA_OPERATIONS_ONLY",
          "value": "false"
        },
        {
          "key": "KOMETA_OVERLAYS_ONLY",
          "value": "false"
        },
        {
          "key": "KOMETA_IGNORE_SCHEDULES",
          "value": "false"
        },
        {
          "key": "KOMETA_IGNORE_GHOST",
          "value": "false"
        },
        {
          "key": "KOMETA_DELETE_COLLECTIONS",
          "value": "false"
        },
        {
          "key": "KOMETA_DELETE_LABELS",
          "value": "false"
        },
        {
          "key": "KOMETA_NO_REPORT",
          "value": "false"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/",
          "containerPath": "/config"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
