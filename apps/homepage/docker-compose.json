{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "homepage",
      "image": "ghcr.io/gethomepage/homepage:v1.8.0",
      "isMain": true,
      "internalPort": 3000,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/:/app/config",
          "containerPath": "/app/config"
        }
      ],
      "environment": [
        {
          "key": "HOMEPAGE_ALLOWED_HOSTS",
          "value": "${APP_DOMAIN},${APP_LOCAL_DOMAIN},${APP_HOST}:${APP_PORT}"
        }
      ]
    }
  ]
}
