{
  "services": [
    {
      "name": "umami-analytics",
      "image": "ghcr.io/umami-software/umami:3.0.3",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "postgresql://umami:${UMAMI_ANALYTICS_DB_PASSWORD}@umami-analytics-db:5432/umami-analytics-db"
        },
        {
          "key": "DATABASE_TYPE",
          "value": "postgresql"
        },
        {
          "key": "APP_SECRET",
          "value": "${UMAMI_ANALYTICS_APP_SECRET}"
        }
      ],
      "dependsOn": {
        "umami-analytics-db": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "umami-analytics-db",
      "image": "postgres:15-alpine",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "umami-analytics-db"
        },
        {
          "key": "POSTGRES_USER",
          "value": "umami"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${UMAMI_ANALYTICS_DB_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "timeout": "5s",
        "retries": 3,
        "test": "pg_isready -d $$POSTGRES_DB -U $$POSTGRES_USER"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
