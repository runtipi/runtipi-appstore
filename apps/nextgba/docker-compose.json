{
  "services": [
    {
      "name": "nextgba",
      "image": "ghcr.io/meienberger/nextgba:v0.1.0",
      "isMain": true,
      "internalPort": 3000,
      "environment": {
        "NODE_ENV": "production"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/games",
          "containerPath": "/data/games"
        }
      ]
    }
  ]
}
