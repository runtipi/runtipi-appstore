{
  "services": [
    {
      "name": "homebridge",
      "image": "homebridge/homebridge:2024-05-02",
      "isMain": true,
      "networkMode": "host",
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/homebridge",
          "containerPath": "/homebridge"
        }
      ],
      "privileged": true,
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10mb",
          "max-file": "1"
        }
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
