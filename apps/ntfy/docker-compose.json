{
  "services": [
    {
      "name": "ntfy",
      "image": "binwiederhier/ntfy:v2.15.0",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "NTFY_BASE_URL",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}"
        },
        {
          "key": "NTFY_UPSTREAM_BASE_URL",
          "value": "https://ntfy.sh"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/cache",
          "containerPath": "/var/cache/ntfy"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/etc/ntfy"
        }
      ],
      "command": "serve"
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
