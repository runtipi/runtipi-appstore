{
  "services": [
    {
      "name": "dailytxt",
      "image": "phitux/dailytxt:1.0.15",
      "isMain": true,
      "internalPort": 8765,
      "environment": {
        "PORT": "8765",
        "SECRET_KEY": "${DAILYTXT_SECRET_KEY}",
        "ALLOW_REGISTRATION": "${DAILYTXT_ALLOW_REGISTRATION}",
        "DATA_INDENT": "2",
        "JWT_EXP_DAYS": "60",
        "ENABLE_UPDATE_CHECK": "True"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/dailytxt",
          "containerPath": "/app/data/"
        }
      ]
    }
  ]
}
