{
  "services": [
    {
      "name": "docmost",
      "image": "docmost/docmost:0.24.1",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "APP_URL",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}"
        },
        {
          "key": "APP_SECRET",
          "value": "${DOCMOST_APP_SECRET}"
        },
        {
          "key": "DATABASE_URL",
          "value": "postgresql://docmost:${DOCMOST_PG_PASSWORD}@docmost-db:5432/docmost?schema"
        },
        {
          "key": "REDIS_URL",
          "value": "redis://docmost-redis:6379"
        }
      ],
      "dependsOn": ["docmost-db", "docmost-redis"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/app/data/storage"
        }
      ]
    },
    {
      "name": "docmost-db",
      "image": "postgres:16-alpine",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "docmost"
        },
        {
          "key": "POSTGRES_USER",
          "value": "docmost"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${DOCMOST_PG_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgresql",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    },
    {
      "name": "docmost-redis",
      "image": "redis:7.2-alpine",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
