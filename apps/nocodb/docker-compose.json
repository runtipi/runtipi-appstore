{
  "services": [
    {
      "name": "nocodb",
      "image": "nocodb/nocodb:0.265.1",
      "isMain": true,
      "internalPort": 8080,
      "environment": [
        {
          "key": "NC_DB",
          "value": "pg://nocodb-db:5432?u=postgres&p=${NOCODB_DB_PASSWORD}&d=nocodb"
        },
        {
          "key": "NC_PUBLIC_URL",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}"
        },
        {
          "key": "NC_AUTH_JWT_SECRET",
          "value": "${NOCODB_JWT_SECRET}"
        },
        {
          "key": "NC_REDIS_URL",
          "value": "redis://default:${NOCODB_REDIS_PASSWORD}@nocodb-redis:6379"
        },
        {
          "key": "DB_QUERY_LIMIT_DEFAULT",
          "value": "${NOCODB_TABLE_ROWS-25}"
        }
      ],
      "dependsOn": {
        "nocodb-db": {
          "condition": "service_healthy"
        }
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nocode-data",
          "containerPath": "/usr/app/data"
        }
      ]
    },
    {
      "name": "nocodb-db",
      "image": "postgres:16",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "nocodb"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${NOCODB_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_USER",
          "value": "postgres"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "interval": "10s",
        "timeout": "2s",
        "retries": 10,
        "test": "pg_isready -U \"$$POSTGRES_USER\" -d \"$$POSTGRES_DB\""
      }
    },
    {
      "name": "nocodb-redis",
      "image": "redis:alpine",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "command": "redis-server --requirepass ${NOCODB_REDIS_PASSWORD}",
      "healthCheck": {
        "interval": "1s",
        "timeout": "3s",
        "retries": 30,
        "test": "redis-cli ping"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
