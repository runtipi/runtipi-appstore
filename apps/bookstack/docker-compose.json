{
  "services": [
    {
      "name": "bookstack",
      "image": "lscr.io/linuxserver/bookstack:25.07.20250804",
      "internalPort": 80,
      "isMain": true,
      "dependsOn": ["bookstack-db"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        }
      ],
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "APP_URL",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}"
        },
        {
          "key": "APP_KEY",
          "value": "base64:${APP_KEY}"
        },
        {
          "key": "DB_HOST",
          "value": "bookstack-db"
        },
        {
          "key": "DB_USERNAME",
          "value": "tipi"
        },
        {
          "key": "DB_PASSWORD",
          "value": "${BOOKSTACK_DB_PASS}"
        },
        {
          "key": "DB_DATABASE",
          "value": "bookstackapp"
        }
      ]
    },
    {
      "name": "bookstack-db",
      "image": "lscr.io/linuxserver/mariadb",
      "isMain": false,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/config"
        }
      ],
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "MYSQL_ROOT_PASSWORD",
          "value": "${ROOT_ACCESS_PASSWORD}"
        },
        {
          "key": "MYSQL_DATABASE",
          "value": "bookstackapp"
        },
        {
          "key": "MYSQL_USER",
          "value": "tipi"
        },
        {
          "key": "MYSQL_PASSWORD",
          "value": "${BOOKSTACK_DB_PASS}"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
