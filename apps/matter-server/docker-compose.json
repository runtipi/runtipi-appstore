{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "matter-server",
      "image": "ghcr.io/home-assistant-libs/python-matter-server:8.1.0",
      "isMain": true,
      "networkMode": "host",
      "volumes": [
        {
          "hostPath": "/run/dbus",
          "containerPath": "/run/dbus",
          "readOnly": true
        },
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/data"
        }
      ],
      "securityOpt": ["apparmor=unconfined"]
    }
  ]
}
