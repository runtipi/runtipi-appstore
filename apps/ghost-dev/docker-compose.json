{
  "services": [
    {
      "name": "ghost-dev",
      "image": "ghost:6.5.3",
      "isMain": true,
      "internalPort": 2368,
      "environment": [
        {
          "key": "database__connection__filename",
          "value": "/var/lib/ghost/content/data/ghost.db"
        },
        {
          "key": "NODE_ENV",
          "value": "development"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/lib/ghost/content"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
