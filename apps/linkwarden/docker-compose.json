{
  "services": [
    {
      "name": "linkwarden",
      "image": "ghcr.io/linkwarden/linkwarden:v2.13.1",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "postgresql://tipi:${LINKWARDEN_DB_PASSWORD}@linkwarden-db:5432/linkwarden"
        },
        {
          "key": "NEXTAUTH_SECRET",
          "value": "${LINKWARDEN_NEXTAUTH_SECRET}"
        },
        {
          "key": "NEXTAUTH_URL",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}/api/v1/auth"
        },
        {
          "key": "NEXT_PUBLIC_DISABLE_REGISTRATION",
          "value": "${LINKWARDEN_NEXT_PUBLIC_DISABLE_REGISTRATION}"
        }
      ],
      "dependsOn": ["linkwarden-db"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/linkwarden",
          "containerPath": "/data/data"
        }
      ]
    },
    {
      "name": "linkwarden-db",
      "image": "postgres:16-alpine",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${LINKWARDEN_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "linkwarden"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
