{
  "services": [
    {
      "name": "hedgedoc",
      "image": "quay.io/hedgedoc/hedgedoc:1.10.3",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "CMD_DB_URL",
          "value": "postgres://hedgedoc:${HEDGEDOC_DB_PASSWORD}@hedgedoc-db:5432/hedgedoc"
        },
        {
          "key": "CMD_DOMAIN",
          "value": "${APP_DOMAIN}"
        },
        {
          "key": "CMD_URL_ADDPORT",
          "value": "${HEDGEDOC_ADDPORT}"
        }
      ],
      "dependsOn": ["hedgedoc-db"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/hedgedoc-uploads",
          "containerPath": "/hedgedoc/public/uploads"
        }
      ]
    },
    {
      "name": "hedgedoc-db",
      "image": "postgres:13.4-alpine",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "hedgedoc"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${HEDGEDOC_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "hedgedoc"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
