{
  "services": [
    {
      "name": "windows",
      "image": "dockurr/windows:5.12",
      "isMain": true,
      "internalPort": 8006,
      "addPorts": [
        {
          "hostPort": 3389,
          "containerPort": 3389,
          "tcp": true,
          "udp": true
        }
      ],
      "environment": [
        {
          "key": "RAM_SIZE",
          "value": "${WINDOWS_RAM_GB}G"
        },
        {
          "key": "CPU_CORE",
          "value": "${WINDOWS_CPU_CORES}"
        },
        {
          "key": "DISK_SIZE",
          "value": "${WINDOWS_DISK_SIZE_GB}G"
        },
        {
          "key": "VERSION",
          "value": "${WINDOWS_VERSION}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/storage"
        }
      ],
      "sysctls": {
        "net.ipv4.ip_forward": 1
      },
      "devices": ["/dev/kvm"],
      "capAdd": ["NET_ADMIN"],
      "stopGracePeriod": "2m"
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
