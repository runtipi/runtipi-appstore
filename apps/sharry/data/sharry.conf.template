sharry.restserver {

  base-url = "https://{{APP_DOMAIN}}"

  bind {
    address = "0.0.0.0"
    port = 9090
  }

  backend {
    auth {
      fixed.enabled = true ## enabled admin:admin access
    }

    jdbc {
      url = "jdbc:postgresql://sharry-db:5432/sharry-db"
      user = "sharry"
      password = "{{DB_PASS}}"

    signup {
      mode = "open"
      invite-time = "14 days"
      invite-password = "generate-invite"
      }
    }

  }
}