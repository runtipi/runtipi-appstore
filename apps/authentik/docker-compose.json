{
  "services": [
    {
      "image": "ghcr.io/goauthentik/server:2025.10.0",
      "name": "authentik",
      "internalPort": 9000,
      "isMain": true,
      "command": "server",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/authentik-media",
          "containerPath": "/media"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/authentik-custom-templates",
          "containerPath": "/templates"
        }
      ],
      "addPorts": [
        {
          "hostPort": 9443,
          "containerPort": 9443
        }
      ],
      "environment": [
        {
          "key": "AUTHENTIK_REDIS__HOST",
          "value": "authentik-redis"
        },
        {
          "key": "AUTHENTIK_POSTGRESQL__HOST",
          "value": "authentik-db"
        },
        {
          "key": "AUTHENTIK_POSTGRESQL__USER",
          "value": "authentik"
        },
        {
          "key": "AUTHENTIK_POSTGRESQL__NAME",
          "value": "authentik"
        },
        {
          "key": "AUTHENTIK_POSTGRESQL__PASSWORD",
          "value": "${AUTHENTIK_DB_PASSWORD}"
        },
        {
          "key": "AUTHENTIK_SECRET_KEY",
          "value": "${AUTHENTIK_SECRET_KEY}"
        }
      ],
      "dependsOn": ["authentik-db", "authentik-redis"]
    },
    {
      "image": "ghcr.io/goauthentik/server:2025.10.0",
      "name": "authentik-worker",
      "command": "worker",
      "user": "root",
      "volumes": [
        {
          "hostPath": "/var/run/docker.sock",
          "containerPath": "/var/run/docker.sock"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/authentik-media",
          "containerPath": "/media"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/authentik-certs",
          "containerPath": "/certs"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/authentik-custom-templates",
          "containerPath": "/templates"
        }
      ],
      "environment": [
        {
          "key": "AUTHENTIK_REDIS__HOST",
          "value": "authentik-redis"
        },
        {
          "key": "AUTHENTIK_POSTGRESQL__HOST",
          "value": "authentik-db"
        },
        {
          "key": "AUTHENTIK_POSTGRESQL__USER",
          "value": "authentik"
        },
        {
          "key": "AUTHENTIK_POSTGRESQL__NAME",
          "value": "authentik"
        },
        {
          "key": "AUTHENTIK_POSTGRESQL__PASSWORD",
          "value": "${AUTHENTIK_DB_PASSWORD}"
        },
        {
          "key": "AUTHENTIK_SECRET_KEY",
          "value": "${AUTHENTIK_SECRET_KEY}"
        }
      ],
      "dependsOn": ["authentik-db", "authentik-redis"]
    },
    {
      "image": "postgres:13-alpine",
      "name": "authentik-db",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "environment": [
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${AUTHENTIK_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_USER",
          "value": "authentik"
        },
        {
          "key": "POSTGRES_DB",
          "value": "authentik"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -d $${POSTGRES_DB} -U $${POSTGRES_USER}",
        "interval": "30s",
        "timeout": "5s",
        "retries": 5,
        "startPeriod": "20s"
      }
    },
    {
      "image": "redis:alpine",
      "name": "authentik-redis",
      "command": "--save 60 1 --loglevel warning",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "healthCheck": {
        "test": "redis-cli ping | grep PONG",
        "interval": "30s",
        "timeout": "3s",
        "retries": 5,
        "startPeriod": "20s"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
