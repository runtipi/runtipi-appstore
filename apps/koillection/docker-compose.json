{
  "services": [
    {
      "name": "koillection",
      "image": "koillection/koillection:1.7.1",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "APP_DEBUG",
          "value": "0"
        },
        {
          "key": "APP_ENV",
          "value": "prod"
        },
        {
          "key": "HTTPS_ENABLED",
          "value": "{APP_EXPOSED}"
        },
        {
          "key": "UPLOAD_MAX_FILESIZE",
          "value": "20M"
        },
        {
          "key": "PHP_MEMORY_LIMIT",
          "value": "512M"
        },
        {
          "key": "PHP_TZ",
          "value": "${TZ}"
        },
        {
          "key": "CORS_ALLOW_ORIGIN",
          "value": "*"
        },
        {
          "key": "JWT_SECRET_KEY",
          "value": "%kernel.project_dir%/config/jwt/private.pem"
        },
        {
          "key": "JWT_PUBLIC_KEY",
          "value": "%kernel.project_dir%/config/jwt/public.pem"
        },
        {
          "key": "DB_DRIVER",
          "value": "pdo_pgsql"
        },
        {
          "key": "DB_NAME",
          "value": "koillection"
        },
        {
          "key": "DB_HOST",
          "value": "koillection-db"
        },
        {
          "key": "DB_PORT",
          "value": "5432"
        },
        {
          "key": "DB_USER",
          "value": "{KOILLECTION_DB_USER}"
        },
        {
          "key": "DB_PASSWORD",
          "value": "{KOILLECTION_DB_PASSWORD}"
        },
        {
          "key": "DB_VERSION",
          "value": "15"
        }
      ],
      "dependsOn": ["koillection-db"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/uploads",
          "containerPath": "/uploads"
        }
      ]
    },
    {
      "name": "koillection-db",
      "image": "postgres:15",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "koillection"
        },
        {
          "key": "POSTGRES_USER",
          "value": "{KOILLECTION_DB_USER}"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "{KOILLECTION_DB_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/volumes/postgresql",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
