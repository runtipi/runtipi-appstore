{
  "services": [
    {
      "name": "mixpost",
      "image": "inovector/mixpost:v2.3.0",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "APP_NAME",
          "value": "'Mixpost'"
        },
        {
          "key": "APP_KEY",
          "value": "'${MIXPOST_APP_KEY}'"
        },
        {
          "key": "APP_URL",
          "value": "'${APP_PROTOCOL:-http}://${APP_DOMAIN}'"
        },
        {
          "key": "DB_HOST",
          "value": "mixpost-mysql"
        },
        {
          "key": "DB_DATABASE",
          "value": "mixpost"
        },
        {
          "key": "DB_USERNAME",
          "value": "tipi"
        },
        {
          "key": "DB_PASSWORD",
          "value": "${MIXPOST_MYSQL_PASSWORD}"
        },
        {
          "key": "REDIS_HOST",
          "value": "mixpost-redis"
        },
        {
          "key": "REDIS_PASSWORD",
          "value": "${MIXPOST_REDIS_PASSWORD}"
        }
      ],
      "dependsOn": {
        "mixpost-mysql": {
          "condition": "service_healthy"
        },
        "mixpost-redis": {
          "condition": "service_healthy"
        }
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/mixpost-storage",
          "containerPath": "/var/www/html/storage/app"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/mixpost-logs",
          "containerPath": "/var/www/html/storage/logs"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/nginx/nginx.conf",
          "containerPath": "/etc/nginx/sites-enabled/default"
        }
      ]
    },
    {
      "name": "mixpost-mysql",
      "image": "mysql/mysql-server:8.0",
      "environment": [
        {
          "key": "MYSQL_ROOT_PASSWORD",
          "value": "${MIXPOST_MYSQL_PASSWORD}"
        },
        {
          "key": "MYSQL_USER",
          "value": "tipi"
        },
        {
          "key": "MYSQL_PASSWORD",
          "value": "${MIXPOST_MYSQL_PASSWORD}"
        },
        {
          "key": "MYSQL_DATABASE",
          "value": "mixpost"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/mysql",
          "containerPath": "/var/lib/mysql"
        }
      ],
      "healthCheck": {
        "timeout": "5s",
        "retries": 3,
        "test": "mysqladmin ping -h localhost -p$$MYSQL_ROOT_PASSWORD"
      }
    },
    {
      "name": "mixpost-redis",
      "image": "redis:latest",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "command": "redis-server --appendonly yes --replica-read-only no --requirepass ${MIXPOST_REDIS_PASSWORD}",
      "healthCheck": {
        "timeout": "5s",
        "retries": 3,
        "test": "redis-cli ping"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
