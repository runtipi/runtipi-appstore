{
  "services": [
    {
      "name": "ghostfolio",
      "image": "ghostfolio/ghostfolio:2.212.0",
      "isMain": true,
      "internalPort": 3333,
      "environment": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "HOST",
          "value": "0.0.0.0"
        },
        {
          "key": "PORT",
          "value": 3333
        },
        {
          "key": "ACCESS_TOKEN_SALT",
          "value": "$GHOSTFOLIO_ACCESS_TOKEN_SALT"
        },
        {
          "key": "DATABASE_URL",
          "value": "postgresql://ghostfolio:${GHOSTFOLIO_DB_PASSWORD}@ghostfolio-db:5432/ghostfolio?sslmode=prefer"
        },
        {
          "key": "JWT_SECRET_KEY",
          "value": "${GHOSTFOLIO_JWT_SECRET_KEY}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "ghostfolio"
        },
        {
          "key": "POSTGRES_USER",
          "value": "ghostfolio"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${GHOSTFOLIO_DB_PASSWORD}"
        },
        {
          "key": "REDIS_HOST",
          "value": "ghostfolio-redis"
        },
        {
          "key": "REDIS_PASSWORD",
          "value": "${GHOSTFOLIO_REDIS_PASSWORD}"
        },
        {
          "key": "REDIS_PORT",
          "value": 6379
        }
      ],
      "dependsOn": {
        "ghostfolio-db": {
          "condition": "service_healthy"
        },
        "ghostfolio-redis": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "ghostfolio-db",
      "image": "postgres:15.4-alpine",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "ghostfolio"
        },
        {
          "key": "POSTGRES_USER",
          "value": "ghostfolio"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${GHOSTFOLIO_DB_PASSWORD}"
        },
        {
          "key": "PGDATA",
          "value": "/var/lib/postgresql/data"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "interval": "10s",
        "timeout": "5s",
        "retries": 5,
        "test": "pg_isready -d ghostfolio -U ghostfolio"
      }
    },
    {
      "name": "ghostfolio-redis",
      "image": "redis:7-alpine",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "command": "--requirepass ${GHOSTFOLIO_REDIS_PASSWORD}",
      "healthCheck": {
        "interval": "10s",
        "timeout": "5s",
        "retries": 5,
        "startPeriod": "30s",
        "test": "redis-cli ping"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
