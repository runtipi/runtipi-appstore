{
  "services": [
    {
      "name": "tandoor",
      "image": "ghcr.io/tandoorrecipes/recipes:2.3.6",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "SECRET_KEY",
          "value": "${TANDOOR_SECRET_KEY}"
        },
        {
          "key": "DB_ENGINE",
          "value": "django.db.backends.postgresql"
        },
        {
          "key": "GUNICORN_MEDIA",
          "value": "1"
        },
        {
          "key": "POSTGRES_HOST",
          "value": "tandoor-db"
        },
        {
          "key": "POSTGRES_PORT",
          "value": "5432"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tandoor"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${TANDOOR_POSTGRESS_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "tandoordb"
        }
      ],
      "dependsOn": {
        "tandoor-db": {
          "condition": "service_healthy"
        }
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/staticfiles",
          "containerPath": "/opt/recipes/staticfiles"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/mediafiles",
          "containerPath": "/opt/recipes/mediafiles"
        }
      ],
      "healthCheck": {
        "interval": "10s",
        "timeout": "5s",
        "retries": 5,
        "startPeriod": "30s",
        "test": "wget --no-verbose --tries=1 --spider http://localhost:80"
      }
    },
    {
      "name": "tandoor-db",
      "image": "postgres:15-alpine",
      "environment": [
        {
          "key": "POSTGRES_PORT",
          "value": "5432"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tandoor"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${TANDOOR_POSTGRESS_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "tandoordb"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgresql",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "interval": "10s",
        "timeout": "5s",
        "retries": 5,
        "startPeriod": "30s",
        "test": "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
