{
  "services": [
    {
      "name": "umami",
      "image": "ghcr.io/umami-software/umami:postgresql-v1.40.0",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "postgresql://umami:${DB_PASSWORD}@umami-db:5432/umami"
        },
        {
          "key": "DATABASE_TYPE",
          "value": "postgresql"
        },
        {
          "key": "HASH_SALT",
          "value": "${HASH_SALT}"
        }
      ],
      "dependsOn": {
        "umami-db": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "umami-db",
      "image": "postgres:12-alpine",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "umami"
        },
        {
          "key": "POSTGRES_USER",
          "value": "umami"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${DB_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "timeout": "5s",
        "retries": 3,
        "test": "pg_isready -d $$POSTGRES_DB -U $$POSTGRES_USER"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json"
}
