{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "image": "ghcr.io/toeverything/affine:stable",
      "name": "affine",
      "internalPort": 3010,
      "isMain": true,
      "command": ["sh", "-c", "node ./scripts/self-host-predeploy && node ./dist/main.js"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/root/.affine/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/root/.affine/storage"
        }
      ],
      "environment": [
        { "key": "AFFINE_CONFIG_PATH", "value": "/root/.affine/config" },
        { "key": "REDIS_SERVER_HOST", "value": "affine-redis" },
        { "key": "DATABASE_URL", "value": "postgres://tipi:${AFFINE_POSTGRES_PASSWORD}@affine-postgres:5432/affine" },
        { "key": "NODE_ENV", "value": "production" },
        { "key": "AFFINE_ADMIN_EMAIL", "value": "${AFFINE_ADMIN_EMAIL}" },
        { "key": "AFFINE_ADMIN_PASSWORD", "value": "${AFFINE_ADMIN_PASSWORD}" },
        { "key": "TELEMETRY_ENABLE", "value": "${AFFINE_TELEMETRY_ENABLE}" }
      ],
      "dependsOn": {
        "affine-redis": {
          "condition": "service_healthy"
        },
        "affine-postgres": {
          "condition": "service_healthy"
        }
      },
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "1000m"
        }
      }
    },
    {
      "image": "redis",
      "name": "affine-redis",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "healthCheck": {
        "test": "redis-cli --raw incr ping",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "image": "postgres:16",
      "name": "affine-postgres",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -d postgres://tipi:${AFFINE_POSTGRES_PASSWORD}@affine-postgres:5432/affine",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      },
      "environment": [
        { "key": "POSTGRES_USER", "value": "tipi" },
        { "key": "POSTGRES_PASSWORD", "value": "${AFFINE_POSTGRES_PASSWORD}" },
        { "key": "POSTGRES_DB", "value": "affine" }
      ]
    }
  ]
}
