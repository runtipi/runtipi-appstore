{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "kiwix-serve",
      "image": "ghcr.io/kiwix/kiwix-serve:3.7.0-2",
      "isMain": true,
      "internalPort": 8080,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/zim",
          "containerPath": "/data"
        }
      ],
      "command": "*.zim"
    }
  ]
}
