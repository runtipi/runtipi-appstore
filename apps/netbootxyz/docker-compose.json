{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "netbootxyz",
      "image": "netbootxyz/netbootxyz:0.7.5-nbxyz3",
      "isMain": true,
      "internalPort": 3000,
      "addPorts": [
        {
          "hostPort": 69,
          "containerPort": 69,
          "udp": true
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/assets",
          "containerPath": "/assets"
        }
      ]
    }
  ]
}
