{
  "services": [
    {
      "name": "code-server",
      "image": "lscr.io/linuxserver/code-server:4.107.1",
      "isMain": true,
      "internalPort": 8443,
      "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "PASSWORD",
          "value": "${CODESERVER_PASSWORD}"
        },
        {
          "key": "SUDO_PASSWORD",
          "value": "${CODESERVER_SUDO_PASSWORD}"
        },
        {
          "key": "DEFAULT_WORKSPACE",
          "value": "/config/workspace"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/projects",
          "containerPath": "/projects"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}",
          "containerPath": "/runtipi"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
