{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "ollama-nvidia",
      "image": "ollama/ollama:0.6.4",
      "isMain": true,
      "internalPort": 11434,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/.ollama",
          "containerPath": "/root/.ollama"
        }
      ],
      "deploy": {
        "resources": {
          "reservations": {
            "devices": [
              {
                "driver": "nvidia",
                "count": "all",
                "capabilities": ["gpu"]
              }
            ]
          }
        }
      }
    }
  ]
}
