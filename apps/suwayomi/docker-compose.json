{
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "suwayomi",
      "image": "ghcr.io/suwayomi/tachidesk:v2.1.1972",
      "isMain": true,
      "internalPort": 4567,
      "environment": {
        "TZ": "${TZ}",
        "BIND_IP": "0.0.0.0"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/home/suwayomi/.local/share/Tachidesk"
        }
      ]
    }
  ]
}
