{
  "services": [
    {
      "name": "scrypted",
      "image": "koush/scrypted:20-jammy-full.s6-v0.94.5",
      "isMain": true,
      "networkMode": "host",
      "environment": [
        {
          "key": "SCRYPTED_WEBHOOK_UPDATE_AUTHORIZATION",
          "value": "${SCRYPTED_BEARER_TOKEN}"
        },
        {
          "key": "SCRYPTED_DOCKER_AVAHI",
          "value": "false"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/scrypted/database",
          "containerPath": "/server/volume"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media/data/NVR/scrypted",
          "containerPath": "/nvr"
        }
      ],
      "privileged": true,
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "10"
        }
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
