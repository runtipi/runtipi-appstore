{
  "services": [
    {
      "name": "zigbee2mqtt",
      "image": "koenkk/zigbee2mqtt:2.6.2",
      "isMain": true,
      "internalPort": 8080,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/",
          "containerPath": "/app/data"
        }
      ],
      "devices": ["${Z2M_DEVICE}:/dev/ttyACM0"]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json"
}
