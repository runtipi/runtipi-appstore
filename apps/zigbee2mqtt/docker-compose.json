{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "zigbee2mqtt",
      "image": "koenkk/zigbee2mqtt:2.1.3",
      "isMain": true,
      "internalPort": 8080,
      "environment": {
        "TZ": "${TZ}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/",
          "containerPath": "/app/data"
        }
      ],
      "devices": ["${Z2M_DEVICE}:/dev/ttyACM0"]
    }
  ]
}
