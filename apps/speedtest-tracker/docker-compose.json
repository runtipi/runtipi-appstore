{
  "services": [
    {
      "name": "speedtest-tracker",
      "image": "lscr.io/linuxserver/speedtest-tracker:1.13.5",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "DB_CONNECTION",
          "value": "pgsql"
        },
        {
          "key": "DB_HOST",
          "value": "speedtest-tracker-db"
        },
        {
          "key": "DB_PORT",
          "value": "5432"
        },
        {
          "key": "DB_DATABASE",
          "value": "speedtest-tracker"
        },
        {
          "key": "DB_USERNAME",
          "value": "tipi"
        },
        {
          "key": "DB_PASSWORD",
          "value": "${SPEEDTEST_TRACKER_DB_PASSWORD}"
        },
        {
          "key": "SPEEDTEST_SCHEDULE",
          "value": "${SPEEDTEST_SCHEDULE:-'30 * * * *'}"
        },
        {
          "key": "SPEEDTEST_SERVERS",
          "value": "${SPEEDTEST_SERVERS:-''}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "APP_TIMEZONE",
          "value": "${TZ}"
        },
        {
          "key": "DISPLAY_TIMEZONE",
          "value": "${TZ}"
        },
        {
          "key": "APP_KEY",
          "value": "${SPEEDTEST_APP_KEY}"
        }
      ],
      "dependsOn": ["speedtest-tracker-db"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/speedtest-tracker/config",
          "containerPath": "/config"
        }
      ]
    },
    {
      "name": "speedtest-tracker-db",
      "image": "postgres:15",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${SPEEDTEST_TRACKER_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "speedtest-tracker"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "timeout": "5s",
        "retries": 3,
        "test": "pg_isready -d $$POSTGRES_DB -U $$POSTGRES_USER"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
