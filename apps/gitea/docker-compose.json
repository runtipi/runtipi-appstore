{
  "services": [
    {
      "name": "gitea",
      "image": "gitea/gitea:1.25.3",
      "environment": [
        {
          "key": "USER_UID",
          "value": "1000"
        },
        {
          "key": "USER_GID",
          "value": "1000"
        },
        {
          "key": "GITEA__database__DB_TYPE",
          "value": "postgres"
        },
        {
          "key": "GITEA__database__DB_HOST",
          "value": "gitea-db:5432"
        },
        {
          "key": "GITEA__database__DB_NAME",
          "value": "gitea"
        },
        {
          "key": "GITEA__database__DB_USER",
          "value": "gitea"
        },
        {
          "key": "GITEA__database__DB_PASSWD",
          "value": "gitea"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/gitea",
          "containerPath": "/data"
        }
      ],
      "internalPort": 3000,
      "addPorts": [
        {
          "hostPort": 222,
          "containerPort": 22
        }
      ],
      "dependsOn": ["gitea-db"],
      "isMain": true
    },
    {
      "name": "gitea-db",
      "image": "postgres:14",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "gitea"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "gitea"
        },
        {
          "key": "POSTGRES_DB",
          "value": "gitea"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
