{
  "services": [
    {
      "name": "wikijs",
      "image": "ghcr.io/requarks/wiki:2.5.311",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "DB_TYPE",
          "value": "postgres"
        },
        {
          "key": "DB_HOST",
          "value": "wikijs-db"
        },
        {
          "key": "DB_PORT",
          "value": 5432
        },
        {
          "key": "DB_USER",
          "value": "wikijs"
        },
        {
          "key": "DB_PASS",
          "value": "${WIKI_JS_DB_PASS}"
        },
        {
          "key": "DB_NAME",
          "value": "wiki"
        }
      ],
      "dependsOn": ["wikijs-db"]
    },
    {
      "name": "wikijs-db",
      "image": "postgres:11-alpine",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "wiki"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${WIKI_JS_DB_PASS}"
        },
        {
          "key": "POSTGRES_USER",
          "value": "wikijs"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "logging": {
        "driver": "none"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
