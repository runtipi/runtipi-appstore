{
  "services": [
    {
      "name": "heimdall",
      "image": "lscr.io/linuxserver/heimdall:2.6.1",
      "isMain": true,
      "internalPort": 80,
      "restart": "unless-stopped",
      "environment": {
        "PUID": "1000",
        "PGID": "1000",
        "TZ": "${TZ}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        }
      ]
    }
  ]
}
