{
  "services": [
    {
      "image": "ghcr.io/bitmagnet-io/bitmagnet:v0.10.0",
      "name": "bitmagnet",
      "internalPort": 3333,
      "isMain": true,
      "command": ["worker", "run", "--keys=http_server", "--keys=queue_server", "--keys=dht_crawler"],
      "environment": [
        {
          "key": "POSTGRES_HOST",
          "value": "bitmagnet-db"
        },
        {
          "key": "POSTGRES_NAME",
          "value": "bitmagnet"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${BITMAGNENT_DB_PASSWORD}"
        },
        {
          "key": "REDIS_ADDR",
          "value": "bitmagnet-redis:6379"
        }
      ],
      "dependsOn": {
        "bitmagnet-db": {
          "condition": "service_healthy"
        },
        "bitmagnet-redis": {
          "condition": "service_started"
        }
      },
      "addPorts": [
        {
          "containerPort": 3334,
          "hostPort": 3334,
          "tcp": true
        },
        {
          "containerPort": 3334,
          "hostPort": 3334,
          "udp": true
        }
      ]
    },
    {
      "image": "postgres:17-alpine",
      "name": "bitmagnet-db",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "environment": [
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${BITMAGNENT_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_DB",
          "value": "bitmagnet"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -d $${POSTGRES_DB} -U $${POSTGRES_USER}",
        "startPeriod": "20s",
        "interval": "30s",
        "retries": 5,
        "timeout": "5s"
      }
    },
    {
      "image": "redis:alpine",
      "name": "bitmagnet-redis",
      "command": "--save 60 1 --loglevel warning",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "healthCheck": {
        "test": "redis-cli ping | grep PONG",
        "startPeriod": "20s",
        "interval": "30s",
        "retries": 5,
        "timeout": "3s"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
