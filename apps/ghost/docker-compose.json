{
  "services": [
    {
      "name": "ghost",
      "image": "ghost:5.130.6",
      "dependsOn": ["ghostdb"],
      "internalPort": 2368,
      "environment": [
        {
          "key": "database__client",
          "value": "mysql"
        },
        {
          "key": "database__connection__host",
          "value": "ghostdb"
        },
        {
          "key": "database__connection__user",
          "value": "tipi"
        },
        {
          "key": "database__connection__password",
          "value": "${GHOST_DATABASE_PASSWORD}"
        },
        {
          "key": "database__connection__database",
          "value": "ghosttipi"
        },
        {
          "key": "url",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}"
        },
        {
          "key": "mail__transport",
          "value": "SMTP"
        },
        {
          "key": "mail__options__service",
          "value": "${GHOST_MAIL_SERVICE}"
        },
        {
          "key": "mail__options__host",
          "value": "${GHOST_MAIL_HOST}"
        },
        {
          "key": "mail__options__port",
          "value": "${GHOST_MAIL_PORT}"
        },
        {
          "key": "mail__options__auth__user",
          "value": "${GHOST_MAIL_USER}"
        },
        {
          "key": "mail__options__auth__pass",
          "value": "${GHOST_MAIL_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/content",
          "containerPath": "/var/lib/ghost/content"
        }
      ],
      "isMain": true
    },
    {
      "name": "ghostdb",
      "image": "mariadb:latest",
      "environment": [
        {
          "key": "MYSQL_ROOT_PASSWORD",
          "value": "${GHOST_DATABASE_PASSWORD}"
        },
        {
          "key": "MYSQL_USER",
          "value": "tipi"
        },
        {
          "key": "MYSQL_PASSWORD",
          "value": "${GHOST_DATABASE_PASSWORD}"
        },
        {
          "key": "MYSQL_DATABASE",
          "value": "ghosttipi"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/mysql"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
