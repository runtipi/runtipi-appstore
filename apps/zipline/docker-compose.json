{
  "services": [
    {
      "name": "zipline",
      "image": "ghcr.io/diced/zipline:3.7.13",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "CORE_RETURN_HTTPS",
          "value": "false"
        },
        {
          "key": "CORE_SECRET",
          "value": "${ZIPLINE_CORE_SECRET}"
        },
        {
          "key": "CORE_HOST",
          "value": "0.0.0.0"
        },
        {
          "key": "CORE_PORT",
          "value": "3000"
        },
        {
          "key": "CORE_DATABASE_URL",
          "value": "postgres://tipi:${ZIPLINE_DB_PASSWORD}@zipline-db/zipline"
        },
        {
          "key": "CORE_LOGGER",
          "value": "true"
        }
      ],
      "dependsOn": ["zipline-db"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/uploads",
          "containerPath": "/zipline/uploads"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/public",
          "containerPath": "/zipline/public"
        }
      ]
    },
    {
      "name": "zipline-db",
      "image": "postgres:14",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${ZIPLINE_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "zipline"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "interval": "10s",
        "timeout": "5s",
        "retries": 5,
        "test": "pg_isready -U postgres"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
