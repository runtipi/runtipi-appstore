{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "immich",
      "image": "ghcr.io/immich-app/immich-server:v1.135.3",
      "isMain": true,
      "internalPort": 2283,
      "environment": {
        "NODE_ENV": "production",
        "DB_HOSTNAME": "immich-db",
        "DB_USERNAME": "tipi",
        "DB_PASSWORD": "${DB_PASSWORD}",
        "ENABLE_MAPBOX": "false",
        "DB_DATABASE_NAME": "immich",
        "REDIS_HOSTNAME": "immich-redis",
        "JWT_SECRET": "${JWT_SECRET}"
      },
      "dependsOn": ["immich-redis", "immich-db"],
      "volumes": [
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media/data/images/immich",
          "containerPath": "/usr/src/app/upload"
        }
      ]
    },
    {
      "name": "immich-machine-learning",
      "image": "ghcr.io/immich-app/immich-machine-learning:v1.135.3",
      "environment": {
        "NODE_ENV": "production",
        "DB_HOSTNAME": "immich-db",
        "DB_USERNAME": "tipi",
        "DB_PASSWORD": "${DB_PASSWORD}",
        "DB_NAME": "immich",
        "DB_DATABASE_NAME": "immich"
      },
      "dependsOn": ["immich-db"],
      "volumes": [
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media/data/images/immich",
          "containerPath": "/usr/src/app/upload"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/immich-ml-cache",
          "containerPath": "/cache"
        }
      ]
    },
    {
      "name": "immich-redis",
      "image": "redis:6.2",
      "healthCheck": {
        "test": "redis-cli ping || exit 1"
      }
    },
    {
      "name": "immich-db",
      "image": "ghcr.io/immich-app/postgres:14-vectorchord0.3.0-pgvectors0.2.0",
      "environment": {
        "POSTGRES_PASSWORD": "${DB_PASSWORD}",
        "POSTGRES_USER": "tipi",
        "POSTGRES_DB": "immich",
        "PG_DATA": "/var/lib/postgresql/data"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ]
}
