{
  "services": [
    {
      "name": "monica",
      "image": "monica:4.1.2",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "APP_KEY",
          "value": "${MONICA_APP_KEY}"
        },
        {
          "key": "APP_TRUSTED_PROXIES",
          "value": "172.18.0.0/16"
        },
        {
          "key": "DB_HOST",
          "value": "monica-db"
        },
        {
          "key": "DB_USERNAME",
          "value": "usermonica"
        },
        {
          "key": "DB_PASSWORD",
          "value": "${MONICA_DB_PASS}"
        }
      ],
      "dependsOn": ["monica-db"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/www/html/storage"
        }
      ]
    },
    {
      "name": "monica-db",
      "image": "mariadb:10.6.11",
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "MARIADB_RANDOM_ROOT_PASSWORD",
          "value": "true"
        },
        {
          "key": "MARIADB_DATABASE",
          "value": "monica"
        },
        {
          "key": "MARIADB_USER",
          "value": "usermonica"
        },
        {
          "key": "MARIADB_PASSWORD",
          "value": "${MONICA_DB_PASS}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/mysql",
          "containerPath": "/var/lib/mysql"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
