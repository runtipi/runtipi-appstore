{
  "services": [
    {
      "name": "forgejo",
      "image": "codeberg.org/forgejo/forgejo:13.0.4",
      "isMain": true,
      "internalPort": 3000,
      "addPorts": [
        {
          "hostPort": 222,
          "containerPort": 22
        }
      ],
      "environment": [
        {
          "key": "USER_UID",
          "value": "1000"
        },
        {
          "key": "USER_GID",
          "value": "1000"
        },
        {
          "key": "FORGEJO__database__DB_TYPE",
          "value": "postgres"
        },
        {
          "key": "FORGEJO__database__HOST",
          "value": "forgejo-db:5432"
        },
        {
          "key": "FORGEJO__database__NAME",
          "value": "forgejo"
        },
        {
          "key": "FORGEJO__database__USER",
          "value": "forgejo"
        },
        {
          "key": "FORGEJO__database__PASSWD",
          "value": "${FORGEJO_DB_PASSWORD}"
        }
      ],
      "dependsOn": ["forgejo-db"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/forgejo",
          "containerPath": "/data"
        }
      ]
    },
    {
      "name": "forgejo-db",
      "image": "postgres:14",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "forgejo"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${FORGEJO_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "forgejo"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
