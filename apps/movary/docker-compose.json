{
  "services": [
    {
      "name": "movary",
      "image": "leepeuker/movary:0.69.0",
      "isMain": true,
      "internalPort": 80,
      "user": "1000:1000",
      "environment": [
        {
          "key": "TMDB_API_KEY",
          "value": "${MOVARY_TMDB_API_KEY}"
        },
        {
          "key": "TIMEZONE",
          "value": "${TZ}"
        },
        {
          "key": "DATABASE_MODE",
          "value": "mysql"
        },
        {
          "key": "DATABASE_MYSQL_HOST",
          "value": "movary-db"
        },
        {
          "key": "DATABASE_MYSQL_NAME",
          "value": "movary"
        },
        {
          "key": "DATABASE_MYSQL_USER",
          "value": "tipi"
        },
        {
          "key": "DATABASE_MYSQL_PASSWORD",
          "value": "${MOVARY_MYSQL_PASSWORD}"
        },
        {
          "key": "TMDB_ENABLE_IMAGE_CACHING",
          "value": "1"
        },
        {
          "key": "APPLICATION_URL",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}"
        },
        {
          "key": "PLEX_IDENTIFIER",
          "value": "${MOVARY_PLEX_IDENTIFIER}"
        },
        {
          "key": "JELLYFIN_DEVICE_ID",
          "value": "${MOVARY_JELLYFIN_IDENTIFIER}"
        }
      ],
      "dependsOn": {
        "movary-db": {
          "condition": "service_healthy"
        }
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/movary",
          "containerPath": "/app/storage"
        }
      ]
    },
    {
      "name": "movary-migration",
      "image": "leepeuker/movary:0.69.0",
      "user": "1000:1000",
      "environment": [
        {
          "key": "TMDB_API_KEY",
          "value": "${MOVARY_TMDB_API_KEY}"
        },
        {
          "key": "TIMEZONE",
          "value": "${TZ}"
        },
        {
          "key": "DATABASE_MODE",
          "value": "mysql"
        },
        {
          "key": "DATABASE_MYSQL_HOST",
          "value": "movary-db"
        },
        {
          "key": "DATABASE_MYSQL_NAME",
          "value": "movary"
        },
        {
          "key": "DATABASE_MYSQL_USER",
          "value": "tipi"
        },
        {
          "key": "DATABASE_MYSQL_PASSWORD",
          "value": "${MOVARY_MYSQL_PASSWORD}"
        },
        {
          "key": "TMDB_ENABLE_IMAGE_CACHING",
          "value": "1"
        },
        {
          "key": "APPLICATION_URL",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}"
        },
        {
          "key": "PLEX_IDENTIFIER",
          "value": "${MOVARY_PLEX_IDENTIFIER}"
        },
        {
          "key": "JELLYFIN_DEVICE_ID",
          "value": "${MOVARY_JELLYFIN_IDENTIFIER}"
        }
      ],
      "dependsOn": {
        "movary-db": {
          "condition": "service_healthy"
        }
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/movary",
          "containerPath": "/app/storage"
        }
      ],
      "command": "php bin/console.php database:migration:migrate"
    },
    {
      "name": "movary-db",
      "image": "mysql:8.0",
      "environment": [
        {
          "key": "MYSQL_DATABASE",
          "value": "movary"
        },
        {
          "key": "MYSQL_USER",
          "value": "tipi"
        },
        {
          "key": "MYSQL_PASSWORD",
          "value": "${MOVARY_MYSQL_PASSWORD}"
        },
        {
          "key": "MYSQL_ROOT_PASSWORD",
          "value": "${MOVARY_MYSQL_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/mysql",
          "containerPath": "/var/lib/mysql"
        }
      ],
      "healthCheck": {
        "timeout": "20s",
        "retries": 10,
        "test": "mysqladmin ping -h localhost"
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
